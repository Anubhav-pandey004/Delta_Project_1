<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input placeholder="Add a catchy title"
        name="listing[title]" 
        type="text" 
        class="form-control"
        required>
        <div class="valid-feedback">
           Title Looks good!
        </div>
        <div class="invalid-feedback">
           title should be valid
          </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea placeholder="description" 
            name="listing[description]" 
            type="text"
            class="form-control" required>
            </textarea>
            <div class="invalid-feedback" required>
                please enter a short description
               </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Uplode listing Image</label>
            <input
            name="listing[image]" 
            type="file"     
            class="form-control"
            required>
            <div class="invalid-feedback">
                please enter a valid Image Link
            </div>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Enter category</label>
            <select name="category" class="form-control" id="category" required>
                <option value="">Categorys</option>
                <option value="mountains">Mountains</option>
                <option value="trending">Trending</option>
                <option value="rooms">Rooms</option>
                <option value="iconiccity">Iconic City</option>
                <option value="castles">Castles</option>
                <option value="amazingpools">Amazing pools</option>
                <option value="camping">Camping</option>
                <option value="farms">Farms</option>
                <option value="arctic">Arctic</option>
              </select>
            <div class="invalid-feedback" >
                please enter a valid Image Link
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input 
                placeholder="1200" 
                name="listing[price]" 
                type="number"
                class="form-control"
                required>
                <div class="invalid-feedback">
                  Price should be valid
                </div>
    
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input placeholder="India" 
                name="listing[country]" 
                type="text"  
                class="form-control"
                required>
                <div class="invalid-feedback">
                    Country should be valid
                   </div>
            </div>

        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Location</label>
            <input placeholder="Mumbai,Maharashtra" 
            name="listing[location]" 
            type="text" 
            class="form-control"
            required>
            <div class="invalid-feedback">
                location should be valid
              </div>
        </div>
        
        <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
</div>
</div>
<script src="/js/script.js"></script>